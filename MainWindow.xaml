<Window x:Class="Pixl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PIXL" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load..." Click="Load_Click"/>
                <MenuItem Header="Save..." Click="Save_Click"/>
            </MenuItem>
            <MenuItem Header="About" />
        </Menu>
        <Border BorderBrush="Gainsboro" BorderThickness="1">
            <StackPanel DockPanel.Dock="Left" Width="270" Margin="5">
                <WrapPanel>
                    <TextBlock Text="Hello :)" />
                </WrapPanel>
                <Separator />
                <TextBlock Text="Here I will have my own control!" />
            </StackPanel>
        </Border>
        <Border BorderBrush="Gainsboro" BorderThickness="1">
            <StackPanel DockPanel.Dock="Right" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Name="OriginalImage" Grid.Column="0" Stretch="UniformToFill"/>
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
                    <Image Grid.Column="2" Name="FilteredImage" Stretch="UniformToFill" />
                </Grid>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
